{
  "name": "forevervm-mcp-server",
  "version": "1.0.0",
  "description": "ForeverVM MCP Server - execute code in a Python REPL",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/main.js",
    "dev": "tsx src/main.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "server",
    "forevervm",
    "python",
    "repl",
    "code-execution",
    "apify"
  ],
  "author": "yfe404",
  "license": "MIT",
  "dependencies": {
    "apify": "^3.2.7",
    "forevervm-mcp": "^0.1.35",
    "express": "^4.19.0",
    "@modelcontextprotocol/sdk": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
